{% macro cardNote(args) %}
<div class="w-full h-36 border shadow-sm cursor-pointer flex p-4">
  <div class="flex flex-col w-2/3 justify-between">
    <span class="w-full overflow-hidden flex flex-col gap-y-2">
      <h3 class="font-semibold">{{args.title}}</h3>
      <p class="custom-ellipsis text-sm" ellipsis="2">{{args.content}}</p>
    </span>
    <span><p>10 m</p></span>
  </div>
  <div class="w-1/3 bg-red-50 h-full"></div>
</div>

{% endmacro %}
